# NPM Security Configuration

# Enforce package-lock.json usage
package-lock=true

# Require exact versions when saving
save-exact=true

# Audit packages on install
audit=true

# Set audit level - fail on moderate and above vulnerabilities
audit-level=moderate

# Prefer offline packages when available
prefer-offline=true

# Strict SSL verification
strict-ssl=true

# Prevent lifecycle scripts from untrusted packages
ignore-scripts=false

# Engine strict - fail if Node version doesn't match
engine-strict=true

# Always use the latest npm registry
registry=https://registry.npmjs.org/

# Prevent installing packages with known vulnerabilities
fund=false

# Lockfile version
lockfile-version=3

# Legacy peer deps for packages that haven't updated peer dependencies for React 19
legacy-peer-deps=true
